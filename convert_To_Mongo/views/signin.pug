extends layout

block content
  main
    div.container-fluid
        div.row
            div.col-sm-12.col-lg-6.mt-5
                div.login
                    p.loginp(onclick='console.log("Hello")') Login
                    form(action='/signin' method='post')
                        div.mb-3
                        label.form-label(for="exampleInputEmail1") Username
                        input.form-control(type="text" aria-describedby="emailHelp" name='username')
                        div.mb-3
                        label.form-label(for="Password1") Password
                        input.form-control(type="password" name='password')
                        div.mb-3.form-check
                        p(type="checkbox" name='rememberme')
                        label.form-check-label(for="exampleCheck1")=error
                        br
                        button.btn.btn-primary.mt-3(type="submit" name='submit') Login
                    br
                    br
            include signupform.pug